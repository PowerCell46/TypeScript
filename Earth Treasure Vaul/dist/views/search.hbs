<main class="search">
    <section id="search">
        <h2>Search by Name</h2>

        <form class="search-wrapper cf" method="POST">
            <input id="#search-input" type="text" name="searchName" placeholder="Search here..." required />
            <button type="submit">Search</button>
        </form>

        <div id="search-container">
            {{#if hasStones}}
                <ul class="card-wrapper">
                    {{#each stones}}
                        <li class="card">
                            <img
                                src={{image}} />
                            <p>
                                <strong>Name: </strong><span class="name">{{name}}</span>
                            </p>
                            <p>
                                <strong>Category: </strong><span class="category">{{category}}</span>
                            </p>
                            <p><strong>Formula:</strong><span class="formula">{{formula}}</span></p>
                            <a class="details-btn" href="/details/{{_id}}">Details</a>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <div id="no-post">
                    <h2>There are no results found.</h2>
                </div>
            {{/if}}
        </div>
    </section>
</main>