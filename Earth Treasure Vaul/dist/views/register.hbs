{{#if error}}
<div>
    <div class="errorContainer">
        <p>{{error}}</p>
    </div>
</div>
{{/if}}

<main class="register">
    <section id="register">
        <div class="form">
            <h2>Register</h2>
            <form class="login-form" method="POST">
                <input type="text" name="email" id="register-email" placeholder="email" value="{{email}}" />
                <input type="password" name="password" id="register-password" placeholder="password" />
                <input type="password" name="repeatPass" id="repeat-password" placeholder="repeat password" />
                <button type="submit">Register</button>
                <p class="message">Already registered? <a href="{{SERVER_ENDPOINTS.login}}">Login</a></p>
            </form>
        </div>
    </section>
</main>