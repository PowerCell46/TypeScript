 <main class="edit">
    <section id="edit">
        <div class="form">
            <h2>Edit item</h2>
            <form method="POST" class="edit-form">
                <input type="text" name="name" id="name" placeholder="Name" value="{{stoneData.name}}" />
                <input type="text" name="category" id="category" placeholder="Category" value="{{stoneData.category}}" />
                <input type="text" name="color" id="color" placeholder="Color" value="{{stoneData.color}}" />
                <input type="text" name="image" id="stone-img" placeholder="Image" value="{{stoneData.image}}" />
                <input type="text" name="location" id="location" placeholder="Location" value="{{stoneData.location}}" />
                <input type="text" name="formula" id="formula" placeholder="Formula" value="{{stoneData.formula}}" />
                <textarea id="description" placeholder="Description..." name="description">{{stoneData.description}}
                </textarea>

                <button type="submit">Edit</button>
            </form>
        </div>
    </section>
</main>